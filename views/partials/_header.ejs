<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <% if (username) { %>
      <form class="form-inline ml-auto" action="/logout" method="POST">
        Logged In As:
        <pre> </pre><%=username.toUpperCase()%>
        <button class="btn btn-outline-primary" type="submit" name="button">Logout</button>
      </form>
      <% } else { %>
      <form class="form-inline ml-auto" action="/login" method="POST">
        <input class="form-control" type="text" name="username" placeholder="Username">
        <pre> </pre>
        <button class="btn btn-primary" type="submit" name="button">Login</button>
      </form>
      <pre> </pre>
      <form class="" action="/register" method="GET">
        <button class="btn btn-primary" type="submit" name="button">Register</button>
      </form>
      <% } %>
    </div>
  </nav>
</header>